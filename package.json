{
  "name": "bun-workspace",
  "module": "index.ts",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@chromatic-com/storybook": "^3.2.6",
    "@happy-dom/global-registrator": "^17.4.4",
    "@markuplint/jsx-parser": "^4.7.18",
    "@markuplint/react-spec": "^4.5.18",
    "@playwright/test": "^1.51.1",
    "@storybook/addon-essentials": "8.6.12",
    "@storybook/addon-interactions": "8.6.12",
    "@storybook/addon-links": "8.6.12",
    "@storybook/nextjs": "8.6.12",
    "@storybook/react": "8.6.12",
    "@storybook/test": "8.6.12",
    "@storybook/test-runner": "^0.22.0",
    "@tanstack/react-query-devtools": "^5.71.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "cspell": "^8.18.1",
    "happy-dom": "^17.4.4",
    "http-server": "^14.1.1",
    "knip": "^5.46.5",
    "markuplint": "^4.11.8",
    "npm-check-updates": "^17.1.16",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.2.1",
    "papaparse": "^5.5.2",
    "plop": "^4.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "8.6.12",
    "storybook-css-modules": "^1.0.8",
    "typescript": "^5.8.2",
    "wait-on": "^8.0.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow npm",
    "postinstall": "npm run gen && [ '$CI' != 'true' ] && npx -y @omni-stove/ai-rules",
    "check-dependencies": "knip",
    "lint": "run-p lint:*",
    "lint:script": "biome check .",
    "lint:spell": "cspell . --no-progress",
    "storybook": "echo Please start in each environment",
    "format": "biome check --write .",
    "test": "npm test --workspaces --if-present",
    "gen": "run-p gen:*",
    "gen:ui": "npx -y @omni-stove/ui --extract packages/ui --platform web",
    "gen:i18n": "npx -y @omni-stove/csv-i18n --input i18n --output packages/gen/i18n",
    "knip": "knip",
    "build-check": "npm run build-check --workspaces --if-present",
    "update": "npm-check-updates -u && npm run update --workspaces --if-present",
    "web": "npm run --workspace=web",
    "shared": "npm run --workspace=shared",
    "agent": "npm run --workspace=agent",
    "ui": "npm run --workspace=ui"
  },
  "type": "module",
  "workspaces": ["packages/*"],
  "dependencies": {
    "@tanstack/react-query": "^5.71.5",
    "zod": "^3.24.2"
  }
}
