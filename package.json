    "@biomejs/biome": "^1.9.4",
    "@chromatic-com/storybook": "^3.2.2",
    "@happy-dom/global-registrator": "^15.9.0",
    "@markuplint/jsx-parser": "^4.7.12",
    "@markuplint/react-spec": "^4.5.12",
    "@playwright/test": "^1.48.2",
    "@storybook/addon-essentials": "8.4.2",
    "@storybook/addon-interactions": "8.4.2",
    "@storybook/addon-links": "8.4.2",
    "@storybook/nextjs": "8.4.2",
    "@storybook/react": "8.4.2",
    "@storybook/test": "8.4.2",
    "@storybook/test-runner": "^0.19.1",
    "@types/bun": "^1.1.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "bun-types": "^1.1.34",
    "cspell": "^8.15.7",
    "happy-dom": "^15.9.0",
    "http-server": "^14.1.1",
    "knip": "^5.36.2",
    "markuplint": "^4.11.2",
    "npm-check-updates": "^17.1.10",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.2.1",
    "papaparse": "^5.4.1",
    "plop": "^4.0.1",
    "react": "^18.3.1",
    "storybook": "8.4.2",
    "storybook-css-modules": "^1.0.8",
    "typescript": "^5.6.3",
    "wait-on": "^8.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow bun",
    "postinstall": "bun gen",
    "app": "bun --filter app",
    "shared": "bun --filter shared",
    "ui": "bun --filter ui",
    "check-dependencies": "knip",
    "lint": "bun run --bun run-p lint:*",
    "lint:script": "biome check .",
    "lint:spell": "cspell . --no-progress",
    "storybook": "echo Please start in each environment",
    "format": "biome check --write .",
    "test": "bun --filter '*' test",
    "gen": "bun run --bun run-p gen:*",
    "gen:i18n": "bun i18n/index.js",
    "knip": "knip",
    "build-check": "bun --filter '*' build-check",
    "update": "npm-check-updates -u & bun --filter '*' update"
  },
  "overrides": {
    "//": "https://github.com/plopjs/plop/issues/445",
    "inquirer": "9.3.5"
  },
  "type": "module",
  "workspaces": ["packages/*"],
  "dependencies": {
    "zod": "^3.23.8"
  }
}
