{
  "name": "bun-workspace",
  "module": "index.ts",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@chromatic-com/storybook": "^3.2.2",
    "@happy-dom/global-registrator": "^15.11.7",
    "@markuplint/jsx-parser": "^4.7.13",
    "@markuplint/react-spec": "^4.5.13",
    "@playwright/test": "^1.49.0",
    "@storybook/addon-essentials": "8.4.5",
    "@storybook/addon-interactions": "8.4.5",
    "@storybook/addon-links": "8.4.5",
    "@storybook/nextjs": "8.4.5",
    "@storybook/react": "8.4.5",
    "@storybook/test": "8.4.5",
    "@storybook/test-runner": "^0.20.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "cspell": "^8.16.1",
    "happy-dom": "^15.11.7",
    "http-server": "^14.1.1",
    "knip": "^5.38.2",
    "markuplint": "^4.11.3",
    "npm-check-updates": "^17.1.11",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.2.1",
    "papaparse": "^5.4.1",
    "plop": "^4.0.1",
    "storybook": "8.4.5",
    "storybook-css-modules": "^1.0.8",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "@codynog/ai-rules": "latest"
  },
  "scripts": {
    "preinstall": "npx only-allow npm",
    "postinstall": "npm run gen && [ '$CI' != 'true' ] && npx @codynog/ai-rules",
    "check-dependencies": "knip",
    "lint": "run-p lint:*",
    "lint:script": "biome check .",
    "lint:spell": "cspell . --no-progress",
    "storybook": "echo Please start in each environment",
    "format": "biome check --write .",
    "test": "npm test --workspaces --if-present",
    "gen": "run-p gen:*",
    "gen:i18n": "node i18n/index.js",
    "knip": "knip",
    "build-check": "npm run build-check --workspaces --if-present",
    "update": "npm-check-updates -u && npm run update --workspaces --if-present",
    "app:dev": "npm run dev --workspace=app",
    "app:build": "npm run build --workspace=app",
    "app:start": "npm run start --workspace=app",
    "app:test": "npm run test --workspace=app",
    "app:plop": "npm run plop --workspace=app",
    "app:update": "npm run update --workspace=app",
    "server:dev": "npm run dev --workspace=server",
    "server:build": "npm run build --workspace=server",
    "server:start": "npm run start --workspace=server",
    "server:test": "npm run test --workspace=server",
    "server:plop": "npm run plop --workspace=server",
    "shared:build": "npm run build --workspace=shared",
    "shared:test": "npm run test --workspace=shared",
    "shared:plop": "npm run plop --workspace=shared",
    "shared:update": "npm run update --workspace=shared",
    "shared:db:generate": "npm run db:generate --workspace=shared",
    "shared:db:push": "npm run db:push --workspace=shared",
    "shared:db:migrate": "npm run db:migrate --workspace=shared",
    "shared:db:seed": "npm run db:seed --workspace=shared"
  },
  "type": "module",
  "workspaces": ["packages/*"],
  "dependencies": {
    "zod": "^3.23.8"
  }
}
