  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@chromatic-com/storybook": "^3.2.2",
    "@happy-dom/global-registrator": "^15.11.6",
    "@markuplint/jsx-parser": "^4.7.13",
    "@markuplint/react-spec": "^4.5.13",
    "@playwright/test": "^1.49.0",
    "@storybook/addon-essentials": "8.4.5",
    "@storybook/addon-interactions": "8.4.5",
    "@storybook/addon-links": "8.4.5",
    "@storybook/nextjs": "8.4.5",
    "@storybook/react": "8.4.5",
    "@storybook/test": "8.4.5",
    "@storybook/test-runner": "^0.19.1",
    "@types/bun": "^1.1.14",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "bun-types": "^1.1.37",
    "cspell": "^8.16.0",
    "happy-dom": "^15.11.6",
    "http-server": "^14.1.1",
    "knip": "^5.38.0",
    "markuplint": "^4.11.3",
    "npm-check-updates": "^17.1.11",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.2.1",
    "papaparse": "^5.4.1",
    "plop": "^4.0.1",
    "storybook": "8.4.5",
    "storybook-css-modules": "^1.0.8",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow bun",
    "postinstall": "bun gen",
    "app": "bun --filter app",
    "shared": "bun --filter shared",
    "server": "bun --filter server",
    "ui": "bun --filter ui",
    "check-dependencies": "knip",
    "lint": "bun run --bun run-p lint:*",
    "lint:script": "biome check .",
    "lint:spell": "cspell . --no-progress",
    "storybook": "echo Please start in each environment",
    "format": "biome check --write .",
    "test": "bun --filter '*' test",
    "gen": "bun run --bun run-p gen:*",
    "gen:i18n": "bun i18n/index.js",
    "knip": "knip",
    "build-check": "bun --filter '*' build-check",
    "update": "npm-check-updates -u & bun --filter '*' update"
  },
  "overrides": {
    "//": "https://github.com/plopjs/plop/issues/445",
    "inquirer": "9.3.5"
  },
  "type": "module",
  "workspaces": ["packages/*"],
  "dependencies": {
    "zod": "^3.23.8"
  }
}
