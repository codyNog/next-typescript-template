{
  "name": "shared",
  "module": "dist/index.js",
  "type": "module",
  "devDependencies": {
    "@testcontainers/postgresql": "^10.15.0",
    "drizzle-kit": "^0.28.1",
    "openapi-typescript": "^7.4.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "drizzle-valibot": "^0.2.0",
    "drizzle-zod": "^0.5.1",
    "gen": "*",
    "localforage": "^1.10.0",
    "next-international": "^1.3.1",
    "openapi-typescript-fetch": "^2.0.0",
    "postgres": "^3.4.5",
    "qs": "^6.13.1",
    "uuid": "^11.0.3"
  },
  "scripts": {
    "build": "tsc",
    "build-check": "tsc --noEmit",
    "test": "NODE_ENV=test npm run test:setup && npm run test:unit && npm run test:cleanup",
    "test:unit": "npx jest",
    "test:setup": "docker compose up test_db -d && npm run wait:db && npm run db:migrate && npm run db:seed",
    "test:cleanup": "docker compose stop test_db",
    "wait:db": "node dist/index.js",
    "plop": "plop",
    "postplop": "biome format --write .",
    "update": "npm-check-updates -u",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "node dist/db/seed/index.js"
  }
}
