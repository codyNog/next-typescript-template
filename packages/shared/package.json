{
  "name": "shared",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@testcontainers/postgresql": "^10.14.0",
    "drizzle-kit": "^0.28.0",
    "openapi-typescript": "^7.4.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.1",
    "drizzle-valibot": "^0.2.0",
    "drizzle-zod": "^0.5.1",
    "gen": "workspace:*",
    "localforage": "^1.10.0",
    "next-international": "^1.3.1",
    "openapi-typescript-fetch": "^2.0.0",
    "postgres": "^3.4.5",
    "qs": "^6.13.0",
    "uuid": "^11.0.2"
  },
  "scripts": {
    "build-check": "tsc --noEmit",
    "test": "NODE_ENV=test bun test:setup && bun test:unit && bun test:cleanup",
    "test:unit": "bun test",
    "test:setup": "docker compose up test_db -d && bun wait:db && bun db:migrate && bun db:seed",
    "test:cleanup": "docker compose stop test_db",
    "wait:db": "bun test index.ts",
    "plop": "plop",
    "postplop": "biome format --write .",
    "update": "npm-check-updates -u",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun db/seed/index.ts"
  }
}
