    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "next": "15.0.2",
    "next-international": "^1.3.1",
    "next-safe-action": "^7.9.9",
    "react": "^18",
    "react-dom": "^18",
    "swr": "^2.2.5",
    "use-debounce": "^10.0.4",
    "uuid": "^11.0.2",
    "zod": "^3.23.8",
    "shared": "workspace:*",
    "gen": "workspace:*"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.2",
